<h1>{{cube.name}}</h1>
<img class="cube" src="{{cube.imageUrl}}">
<div class="details">
  <p><span>Description:</span>{{cube.description}}</p>
  <p><span>Difficulty level:</span>{{cube.difficultyLevel}}</p>
  <a class="btn" href="/">Back</a>
  <a class="btn" href="/cubes/attach-accessory/{{cube._id}}">Attach Accessories</a>

</div>
<h2>Accessories</h2>
{{#if hasAccessories}}
{{#each accessories}}
<div class="accessories">
  <div class="accessory">
    <img src="{{imageUrl}}">
    <h3>{{name}}</h3>
    <p>{{description}}</p>
  </div>
  {{/each}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>